<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <changeSet id="20160518112615" author="Malick">
       
		<!-- PERSONS : ADMIN , CLIENT, MEDECINS -->
		
		<createTable tableName="admin">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="birthday" type="date"/>
            <column name="civility" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mobile_phone_number" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT"/>
        </createTable>
        
		<createTable tableName="clients">
			<column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
				<constraints nullable="false" />
			</column>
           <column name="birthday" type="date"/>
            <column name="civility" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mobile_phone_number" type="VARCHAR(255)"/>
		</createTable>
		
		<createTable tableName="medecins">
			<column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
			<column name="birthday" type="date"/>
            <column name="civility" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mobile_phone_number" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT"/>
            <column name="specialisation_id" type="BIGINT"/>
		</createTable>
		
		
		<!-- ADRESSE -->
		
		<createTable tableName="address">
			<column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
			<column name="created_by" type="VARCHAR(50)">
				<constraints nullable="false" />
			</column>
			<column name="created_date" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="last_modified_by" type="VARCHAR(50)" />
			<column name="last_modified_date" type="timestamp" />
			<column name="version" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="city" type="VARCHAR(25)">
				<constraints nullable="false" />
			</column>
			<column name="street_name" type="VARCHAR(50)">
				<constraints nullable="false" />
			</column>
			<column name="id_client" type="BIGINT">
                <constraints nullable="false"/>
            </column>
		</createTable>
		
		<addForeignKeyConstraint 
					baseColumnNames="id_client" 
					baseTableName="address" 
					constraintName="fk_id_client" 
					deferrable="false" 
					initiallyDeferred="false" 
					referencedColumnNames="id" 
					referencedTableName="clients"/>
					
					

		<!-- CRENEAUX / TIMESLOT -->
		
		<createTable tableName="creneaux">
			<column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
			<column name="created_by" type="VARCHAR(50)">
				<constraints nullable="false" />
			</column>
			<column name="created_date" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="last_modified_by" type="VARCHAR(50)" />
			<column name="last_modified_date" type="timestamp" />
			<column name="version" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="hdebut" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="hfin" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="mdebut" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="mfin" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="id_medecin" type="BIGINT">
				<constraints nullable="false" />
			</column>
		</createTable>
		
		<addForeignKeyConstraint baseColumnNames="id_medecin"
								baseTableName="creneaux" 
								constraintName="fk_id_medecin"
								deferrable="false" 
								initiallyDeferred="false" 
								onDelete="NO ACTION"
								onUpdate="NO ACTION" 
								referencedColumnNames="id" 
								referencedTableName="medecins" />		


		<!-- RENDEZ VOUS / APPOINTMENT -->
		
		<createTable tableName="rv">
			<column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
			<column name="created_by" type="VARCHAR(50)">
				<constraints nullable="false" />
			</column>
			<column name="created_date" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="last_modified_by" type="VARCHAR(50)" />
			<column name="last_modified_date" type="timestamp" />
			<column name="version" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="jour" type="date">
				<constraints nullable="false" />
			</column>
			<column name="id_client" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="id_creneau" type="BIGINT">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addUniqueConstraint columnNames="jour, id_creneau"
			constraintName="jour_creneau" tableName="rv" />
						
        
		<addForeignKeyConstraint baseColumnNames="id_creneau"
								baseTableName="rv" 
								constraintName="fk_id_creneau"
								deferrable="false" 
								initiallyDeferred="false" 
								onDelete="NO ACTION"
								onUpdate="NO ACTION" 
								referencedColumnNames="id" 
								referencedTableName="creneaux" />

		<addForeignKeyConstraint baseColumnNames="id_client"
								baseTableName="rv" 
								constraintName="fk_id_client"
								deferrable="false" 
								initiallyDeferred="false" 
								onDelete="NO ACTION"
								onUpdate="NO ACTION" 
								referencedColumnNames="id" 
								referencedTableName="clients" />



    </changeSet>
    
    
</databaseChangeLog>
